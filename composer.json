{
    "name": "dephpend/dephpend",
    "description": "Dependency analysis for PHP",
    "type": "library",
    "keywords": [
        "dependencies",
        "dependency",
        "analysis"
    ],
    "homepage": "https://dephpend.com",
    "bin": ["bin/dephpend", "bin/php-trace"],
    "require": {
        "php": "^8.2",
        "nikic/php-parser": "^5.4",
        "symfony/console": "^7",
        "symfony/event-dispatcher": "^7"
    },
    "suggest": {
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-tokenizer": "*"
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^11.0",
        "squizlabs/php_codesniffer": "^3.3",
        "friendsofphp/php-cs-fixer": "^3.75.0",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-phpunit": "^2.0",
        "bamarni/composer-bin-plugin": "^1.8"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Haeuslmann",
            "email": "michael.haeuslmann@gmail.com"
        },
        {
            "name": "Aaron Jewell",
            "email": "me@aaronjewell.dev"
        }
    ],
    "autoload": {
        "psr-4": {
            "Mihaeu\\PhpDependencies\\": ["src/", "tests/unit/"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mihaeu\\PhpDependencies\\Tests\\Feature\\": ["tests/feature/"]
        },
        "files": [
            "tests/feature/constants.php"
        ]
    },
    "support": {
        "issues": "https://github.com/aaronjewell/dephpend/issues"
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        }
    }
}
